{
  "manifest_version": 3,
  "name": "XSLT Polyfill",
  "version": "1.0.1",
  "description": "Applies an XSLT polyfill to all XML documents.",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "xslt-polyfill.min.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ]
}

